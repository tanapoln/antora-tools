{
  "name": "antora-tools",
  "version": "0.0.0",
  "description": "Antora cli tool to support development",
  "author": "Tanapol Nearunchorn",
  "bin": {
    "antora-tools": "./bin/run"
  },
  "homepage": "https://github.com/tanapoln/antora-tools",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "tanapoln/antora-tools",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@antora/playbook-builder": "^3.1.4",
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^3.7.0",
    "antora": "^3.1.4",
    "http-server": "^14.1.1",
    "lodash": "^4.17.21",
    "watcher": "^2.3.0",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@oclif/test": "^2.5.5",
    "@types/chai": "^4",
    "@types/http-server": "^0.12.2",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.18.51",
    "chai": "^4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "mocha": "^9",
    "oclif": "^3.16.0",
    "shx": "^0.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^4.9.5"
  },
  "oclif": {
    "bin": "antora-tools",
    "dirname": "antora-tools",
    "commands": "./dist/commands",
    "default": ".",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/tanapoln/antora-tools/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
